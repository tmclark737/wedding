<div class="container">

<%= @guests.first.family.name %><br>


	<%= form_tag family_path(@guests.first.family.id), method: :put do %>
	<table>
		<tr>
			<td>Name</td>
			<td>Will Be There!</td>
			<td>Can Not Attend</td>
		</tr>


		<% @guests.each do |guest| %>
			<tr>
				<td><%= guest.first_name %>&nbsp;<%= guest.last_name %></td>
				<td><%= check_box_tag "attending_ids[]", guest.id %></td>
				<td><%= check_box_tag "absent_ids[]", guest.id %></td>
			</tr>
		<% end %>


	</table>
	<%= submit_tag 'RSVP' %>
	<% end %>
</div>


